<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_2c3038"
            android:textSize="@dimen/default_text_size_16sp"/>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#ff3366"/>-->

        <RelativeLayout
            android:id="@+id/contentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_20dp"
            >

            <TextView
                android:id="@+id/contentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xyxa"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/default_text_size_14sp"/>
        </RelativeLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="#DDDDDD"/>-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="@dimen/default_margin_16dp"
        android:background="@color/white">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin_16dp"
            android:layout_toLeftOf="@+id/ripple2"
            >

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/default_text_size_16sp"/>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple2"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/default_margin_16dp"
            >

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/color_037aff"
                android:textSize="@dimen/default_text_size_16sp"/>
        </com.balysv.materialripple.MaterialRippleLayout>

    </RelativeLayout>
</LinearLayout>
