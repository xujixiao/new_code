<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal">

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content">

        <com.test.xujixiao.xjx.custom_view.ArcProgressBarView
            android:id="@+id/arc_progress1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableBottom="@drawable/loading_01"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/default_margin_15"
            android:text="4\n赞"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="80dp">

        <com.test.xujixiao.xjx.custom_view.ArcProgressBarView
            android:id="@+id/arc_progress2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableBottom="@drawable/loading_01"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/default_margin_15"
            android:text="4\n赞"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="80dp">

        <com.test.xujixiao.xjx.custom_view.ArcProgressBarView
            android:id="@+id/arc_progress3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableBottom="@drawable/loading_01"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/default_margin_15"
            android:text="4\n赞"/>
    </FrameLayout>


</LinearLayout>